{
  "name": "Active Reading Quiz Extension",
  "version": "1.0.0",
  "description": "This extension tackles the problem of passive learning by turning any web article into an interactive quiz.",
  "manifest_version": 3,
  "author": "Ilia Lataria",
  "action": {
    "default_popup": "index.html",
    "default_title": "Active Reading Quiz Extension"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/Readability.js",
        "content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "js/script.js",
      "js/uiManager.js",
      "js/quizManager.js",
      "js/categoryManager.js",
      "js/apiService.js",
      "libs/*"
    ],
    "matches": ["<all_urls>"]
  }]

}